# Copy to .env.local and fill in real values

# Required by Auth.js (generate with: npx auth secret)
AUTH_SECRET=

# GitHub OAuth credentials (create at https://github.com/settings/developers)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Database (Neon Postgres)
# Example: postgres://user:password@host:port/dbname?sslmode=require
DATABASE_URL=

# Optional: helpful in some deployments
# NEXTAUTH_URL=http://localhost:3000

# analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# AI APIs
GROQ_API_KEY=
OPENROUTER_API_KEY=
REPLICATE_API_KEY=

# Cloudflare (for BGE-m3 embeddings and potentially other cloudflare-deployed models)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_KEY=

# S3 stuff (cloudflare R2 recommended)
S3_ENDPOINT_URL=
S3_BUCKET_NAME=
S3_ACCESS_ID_KEY=
S3_SECRET_ACCESS_KEY=
S3_REGION=
S3_PUBLIC_ENDPOINT=https://cdn.yourdomain.com

# email
POSTMARK_KEY=
EMAIL_FROM=
